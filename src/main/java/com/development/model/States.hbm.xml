<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.development.model">
    <class name="States" table="STATES">
        <id name="name" column="NAME" type="string">
            <generator class="assigned"/>
        </id>
        <property name="id" column="ID"  type="integer"/>
        <list name="city" table="CITIES">
        	<key column="STATE"></key>
        	<list-index base="0" column="IDX"></list-index>
        	<one-to-many class="Cities"/>
        </list>
    </class>
    <class name="Cities" table="CITIES">
    	 <id name="id" column="ID" type="integer">
    	 	<generator class="assigned"></generator>
    	 </id>
    	 <property name="name" column="NAME" type="string"></property>
    </class>
</hibernate-mapping>
